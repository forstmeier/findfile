#!/bin/bash

# builds AWS Lambda packages and generates ZIP files

GOARCH=amd64 GOOS=linux go build -o database ./cmd/lambda/database
GOARCH=amd64 GOOS=linux go build -o query ./cmd/lambda/query
GOARCH=amd64 GOOS=linux go build -o setup ./cmd/lambda/setup

zip database.zip database
zip query.zip query
zip setup.zip setup

rm database query setup