#!/bin/bash

/bin/bash ./bin/build_lambdas

cp etc/examples/example.jpg .

config_json=$( jq -n \
'{
	"aws": {
		"cloudformation": {
			"stack_name": "REPLACE"
		},
		"s3": {
			"artifact_bucket": "REPLACE"
		},
		"opensearch": {
			"instance_type": "t3.small.search",
			"username": "REPLACE",
			"password": "REPLACE"
		}
	}
}'
)

echo $config_json > config.json

zip release.zip index.zip buckets.zip documents.zip files.zip cft.yaml config.json example.jpg

rm index.zip buckets.zip documents.zip files.zip config.json example.jpg