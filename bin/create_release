#!/bin/bash

/bin/bash ./bin/build_lambdas

cp etc/scripts/* .
cp etc/examples/* .

CONFIG_DOCUMENT=$( jq -n \
'{
	"aws": {
		"s3": {
			"artifact_bucket": "REPLACE",
			"database_bucket": "REPLACE"
		}
	}
}'
)

echo $CONFIG_DOCUMENT > config.json

zip release.zip database.zip query.zip setup.zip start_api add_bucket generate_query cft.yaml config.json example.jpg

rm database.zip query.zip setup.zip start_api add_bucket generate_query config.json example.jpg