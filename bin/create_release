#!/bin/bash

/bin/bash ./bin/build_lambdas

cp etc/examples/example.jpg .

CONFIG_DOCUMENT=$( jq -n \
'{
	"aws": {
		"cloudformation": {
			"stack_name": "REPLACE"
		},
		"s3": {
			"artifact_bucket": "REPLACE"
		}
	}
}'
)

echo $CONFIG_DOCUMENT > config.json

zip release.zip buckets.zip documents.zip files.zip cft.yaml config.json example.jpg

rm buckets.zip documents.zip files.zip config.json example.jpg